{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1",
      "status": 404,
      "dest": "/dist/index.html"
    }
  ],
  "env": {
    "VITE_API_BASE_URL": "https://api.example.com",
    "NODE_ENV": "production"
  }
}